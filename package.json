{
  "name": "lokalise",
  "private": true,
  "packageManager": "bun@1.3.6",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "turbo --filter=@lokalise/db generate",
    "db:migrate": "turbo --filter=@lokalise/db migrate",
    "db:studio": "turbo --filter=@lokalise/db studio"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  }
}
