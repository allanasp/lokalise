{
	"name": "@lokalise/sdk-react",
	"version": "0.1.0",
	"description": "React Native SDK for Lokalise OTA translations",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": ["dist"],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"typecheck": "tsc --noEmit"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"@react-native-async-storage/async-storage": ">=1.0.0"
	},
	"peerDependenciesMeta": {
		"@react-native-async-storage/async-storage": {
			"optional": true
		}
	},
	"devDependencies": {
		"@react-native-async-storage/async-storage": "^2.1.0",
		"@types/react": "^19.0.0",
		"react": "^19.0.0",
		"tsup": "^8.3.0",
		"typescript": "^5.7.0"
	},
	"license": "MIT",
	"keywords": ["lokalise", "i18n", "translations", "ota", "react-native", "expo"]
}
